<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Specialists' name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <ImageView
                android:id="@+id/imageViewDoc"
                android:layout_below="@id/ratingBar"
                android:layout_width="130dp"
                android:scaleType="fitXY"
                android:layout_marginRight="30dp"
                android:layout_height="100dp"
                android:padding="4dp" />
            <Button
                android:id="@+id/appointment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Appointment"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/imageViewDoc"/>
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:stepSize="1"
                android:layout_height="32dp"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_toRightOf="@id/imageViewDoc"
                android:scaleX=".5"
                android:scaleY=".5"
                android:rating="5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:max="5"/>
            <TextView
                android:id="@+id/textViewSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/ratingBar"
                android:layout_toRightOf="@id/imageViewDoc"
                android:text="DEPARTMENT/SPECIALITY"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSpeciality"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageViewDoc"
                android:text="Orthopaedic Surgery"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textViewDesc"
                android:layout_toRightOf="@id/imageViewDoc"
                android:text="LOCATION"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewLocation"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageViewDoc"
                android:text="Avon Lake Family Health Center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>